<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bglogin"
    tools:context=".registerpage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/logincard"
            android:orientation="vertical"
            android:padding="25dp">
            <TextView
                android:id="@+id/l_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="Register!"
                android:textAlignment="center"
                android:textColor="@color/blue1"
                android:textSize="28sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/l_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pict3"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/r_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/logincard"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="8dp"
                android:gravity="center|start"
                android:hint="Your Full Name"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/r_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/logincard"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:gravity="center|start"
                android:hint="Enter Your Email"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/r_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/logincard"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:gravity="center|start"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/r_conforimpassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/logincard"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:gravity="center|start"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:padding="8dp"
                android:textColor="@color/black" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_marginEnd="10dp" />

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="REGISTER"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:layout_marginTop="15dp"
                android:id="@+id/registerbutton"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have an account?"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/l_txt2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12sp"
                    android:textColor="@color/blue1"
                    android:id="@+id/r_txt3"
                    />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>